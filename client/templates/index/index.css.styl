.container.index
  font-size 18px
  .well
    h1
      margin-top 0
  .indentation-count
    width 30px
    height 30px
    text-align center
    color darkslategrey
    border solid
    border-width 1px
  span
    float right
  label
    font-weight normal
    cursor pointer
  input[type="file"]
    display inline
  .back-placeholder
    min-height 410px
    position relative
    > *
      position absolute
  .placeholder-div
    min-height 400px
    min-width 680px
    background-color white
  .placeholder-text
    color grey
    margin-left 7px
    margin-top 5px

  .placeholder-textarea-transparent
    background-color transparent
  .placeholder-textarea-solid
    background-color #ffffff


